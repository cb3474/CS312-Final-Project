<%- include('partials/header') %>

<a href="/recipes/new" class="btn">+ Add New Recipe</a>

<form action="/search" method="GET" class="search-form">
  <input type="text" name="q" placeholder="Search recipes..." required>
  <button type="submit">Search</button>
</form>


<h1>All Recipes</h1>
<div class="recipe-list">
  <% recipes.forEach(recipe => { %>
    <div class="recipe-card">
      <h2><a href="/recipe/<%= recipe.id %>"><%= recipe.title %></a></h2>
      <p><strong>Cuisine:</strong> <%= recipe.cuisine %></p>
      <p><strong>Meal Type:</strong> <%= recipe.meal_type %></p>
      <p><strong>Difficulty:</strong> <%= recipe.difficulty %></p>
      <p><strong>By:</strong> <%= recipe.author %></p>
    </div>
  <% }) %>
</div>

<%- include('partials/footer') %>



